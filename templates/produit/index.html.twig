{% extends 'base.html.twig' %}

{% block title %}{{ titre ?? 'Catalogue de produits' }} - E-commerce{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-card {
            transition: transform 0.2s;
            margin-bottom: 20px;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .product-image {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }
        .badge-promo {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 1;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center mb-4">{{ titre ?? 'Catalogue de produits' }}</h1>
            
            <!-- Filtres par type -->
            <div class="d-flex justify-content-center mb-4">
                <div class="btn-group" role="group">
                    <a href="{{ path('app_produits') }}" class="btn btn-outline-primary {{ type is null ? 'active' : '' }}">
                        Tous les produits
                    </a>
                    <a href="{{ path('app_produits_vetements') }}" class="btn btn-outline-primary {{ type == 'vetement' ? 'active' : '' }}">
                        Vêtements
                    </a>
                    <a href="{{ path('app_produits_chaussures') }}" class="btn btn-outline-primary {{ type == 'chaussure' ? 'active' : '' }}">
                        Chaussures
                    </a>
                    <a href="{{ path('app_produits_accessoires') }}" class="btn btn-outline-primary {{ type == 'accessoire' ? 'active' : '' }}">
                        Accessoires
                    </a>
                </div>
            </div>
        </div>
    </div>

    {% if produits is empty %}
        <div class="alert alert-info text-center">
            <p>Aucun produit disponible pour le moment.</p>
        </div>
    {% else %}
        <div class="row">
            {% for produit in produits %}
                <div class="col-md-4 mb-4">
                    <div class="card product-card h-100">
                        <div class="position-relative">
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-white">Image produit</span>
                            </div>
                            {% if produit.promotions|length > 0 %}
                                {% set promoActive = false %}
                                {% for promo in produit.promotions %}
                                    {% if promo.dateExpiration >= date() %}
                                        {% set promoActive = true %}
                                        <span class="badge bg-danger badge-promo">-{{ promo.reduction }}%</span>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ produit.nomProduit }}</h5>
                            
                            <!-- Affichage des spécificités selon le type -->
                            {% if produit.type == 'vetement' %}
                                <p class="card-text">
                                    <small class="text-muted">
                                        Taille: {{ produit.taille }} | 
                                        Couleur: {{ produit.couleur }} | 
                                        Genre: {{ produit.genre }}
                                    </small>
                                </p>
                            {% elseif produit.type == 'chaussure' %}
                                <p class="card-text">
                                    <small class="text-muted">Pointure: {{ produit.pointure }}</small>
                                </p>
                            {% elseif produit.type == 'accessoire' %}
                                <p class="card-text">
                                    <small class="text-muted">Type: {{ produit.accessoireType }}</small>
                                </p>
                            {% endif %}

                            <div class="mt-auto">
                                {% set prixFinal = produit.prix %}
                                {% if produit.promotions|length > 0 %}
                                    {% for promo in produit.promotions %}
                                        {% if promo.dateExpiration >= date() %}
                                            {% set prixFinal = promo.appliquerPromo(produit.prix) %}
                                            <p class="card-text">
                                                <span class="text-decoration-line-through text-muted">{{ produit.prix|number_format(2, ',', ' ') }} €</span>
                                                <strong class="text-danger ms-2">{{ prixFinal|number_format(2, ',', ' ') }} €</strong>
                                            </p>
                                        {% endif %}
                                    {% endfor %}
                                {% else %}
                                    <p class="card-text">
                                        <strong>{{ produit.prix|number_format(2, ',', ' ') }} €</strong>
                                    </p>
                                {% endif %}
                                
                                <a href="{{ path('app_produit_show', {id: produit.id}) }}" class="btn btn-primary w-100">
                                    Voir les détails
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}


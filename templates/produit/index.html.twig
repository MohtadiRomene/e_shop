{% extends 'base.html.twig' %}

{% block title %}{{ titre ?? 'Catalogue de produits' }} - Kaira Fashion Store{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Page Title Styling - Matching Frontend */
        .page-title {
            font-family: 'Marcellus', serif;
            font-size: 3rem;
            font-weight: 400;
            color: #111;
            text-align: center;
            margin-bottom: 3rem;
            letter-spacing: 1px;
        }

        /* Category Filter Buttons - Professional Style */
        .category-filters {
            display: flex;
            justify-content: center;
            gap: 0;
            margin-bottom: 4rem;
            border: 1px solid #8C907E;
            max-width: fit-content;
            margin-left: auto;
            margin-right: auto;
        }

        .category-filter-btn {
            padding: 12px 30px;
            background: white;
            color: #8C907E;
            border: none;
            border-right: 1px solid #8C907E;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
            font-weight: 400;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }

        .category-filter-btn:last-child {
            border-right: none;
        }

        .category-filter-btn:hover {
            background: #f8f8f8;
            color: #111;
        }

        .category-filter-btn.active {
            background: #8C907E;
            color: white;
        }

        /* Product Item Styling - Matching Homepage */
        .product-item {
            margin-bottom: 3rem;
        }

        .product-item .image-zoom-effect {
            height: 500px;
            overflow: hidden;
            position: relative;
            background: #f5f5f5;
        }

        .product-item .image-holder {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .product-item .image-holder img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-item:hover .image-holder img {
            transform: scale(1.1);
        }

        .product-item h3 {
            font-family: 'Jost', sans-serif;
            font-size: 1.25rem;
            font-weight: 400;
            color: #111;
            margin-top: 1.5rem;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .product-item .product-price {
            font-family: 'Jost', sans-serif;
            font-size: 1rem;
            color: #111;
            margin-bottom: 1rem;
        }

        .product-item .product-price .original-price {
            text-decoration: line-through;
            color: #999;
            margin-right: 0.5rem;
        }

        .product-item .product-price .final-price {
            color: #dc3545;
            font-weight: 500;
        }

        .product-item .product-details {
            font-family: 'Jost', sans-serif;
            font-size: 0.875rem;
            color: #666;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .product-item .btn-discover {
            font-family: 'Jost', sans-serif;
            border: 1px solid #111;
            background: transparent;
            color: #111;
            padding: 12px 30px;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.875rem;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .product-item .btn-discover:hover {
            background: #111;
            color: white;
        }

        /* Promotion Badge */
        .promo-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: #dc3545;
            color: white;
            padding: 8px 12px;
            font-size: 0.875rem;
            font-weight: 500;
            z-index: 2;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Stock Badge */
        .stock-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 6px 12px;
            font-size: 0.75rem;
            font-weight: 500;
            z-index: 2;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stock-badge.in-stock {
            background: rgba(40, 167, 69, 0.9);
        }

        .stock-badge.out-of-stock {
            background: rgba(220, 53, 69, 0.9);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-state h3 {
            font-family: 'Marcellus', serif;
            font-size: 2rem;
            color: #111;
            margin-bottom: 1rem;
        }

        .empty-state p {
            font-family: 'Jost', sans-serif;
            color: #666;
            font-size: 1rem;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }

            .category-filters {
                flex-direction: column;
                border: 1px solid #8C907E;
            }

            .category-filter-btn {
                border-right: none;
                border-bottom: 1px solid #8C907E;
            }

            .category-filter-btn:last-child {
                border-bottom: none;
            }

            .product-item .image-zoom-effect {
                height: 400px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<section class="py-5 my-5">
    <div class="container">
        <!-- Page Title -->
        <div class="text-center mb-5" data-aos="fade-up">
            <h1 class="page-title">{{ titre ?? 'Catalogue de produits' }}</h1>
        </div>

        <!-- Category Filters -->
        <div class="category-filters" data-aos="fade-up" data-aos-delay="100">
            <a href="{{ path('app_produits') }}" class="category-filter-btn {{ type is null ? 'active' : '' }}">
                Tous les produits
            </a>
            <a href="{{ path('app_produits_vetements') }}" class="category-filter-btn {{ type == 'vetement' ? 'active' : '' }}">
                Vêtements
            </a>
            <a href="{{ path('app_produits_chaussures') }}" class="category-filter-btn {{ type == 'chaussure' ? 'active' : '' }}">
                Chaussures
            </a>
            <a href="{{ path('app_produits_accessoires') }}" class="category-filter-btn {{ type == 'accessoire' ? 'active' : '' }}">
                Accessoires
            </a>
        </div>

        <!-- Products Grid -->
        {% if produits is empty %}
            <div class="empty-state" data-aos="fade-up">
                <h3>Aucun produit disponible</h3>
                <p>Il n'y a actuellement aucun produit dans cette catégorie.</p>
            </div>
        {% else %}
            <div class="row g-4">
                {% for produit in produits %}
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}">
                        <div class="product-item position-relative h-100">
                            <div class="position-relative mb-4 image-zoom-effect">
                                <div class="image-holder">
                                    {% if produit.image %}
                                        <img src="{{ asset('images/' ~ produit.image) }}" alt="{{ produit.nomProduit }}" class="w-100 h-100">
                                    {% else %}
                                        <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light">
                                            <span class="text-muted">Image produit</span>
                                        </div>
                                    {% endif %}
                                </div>
                                
                                <!-- Stock Badge -->
                                {% if produit.isEnStock() %}
                                    <span class="stock-badge in-stock">En stock</span>
                                {% else %}
                                    <span class="stock-badge out-of-stock">Rupture de stock</span>
                                {% endif %}

                                <!-- Promotion Badge -->
                                {% if produit.promotions|length > 0 %}
                                    {% set promoActive = false %}
                                    {% for promo in produit.promotions %}
                                        {% if promo.dateExpiration >= date() %}
                                            {% set promoActive = true %}
                                            <span class="promo-badge">-{{ promo.reduction }}%</span>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </div>

                            <h3>{{ produit.nomProduit|upper }}</h3>

                            <!-- Price -->
                            <div class="product-price">
                                {% set prixFinal = produit.prixAsFloat %}
                                {% set hasPromo = false %}
                                {% if produit.promotions|length > 0 %}
                                    {% for promo in produit.promotions %}
                                        {% if not hasPromo and promo.dateExpiration >= date() %}
                                            {% set prixFinal = promo.appliquerPromo(produit.prixAsFloat) %}
                                            {% set hasPromo = true %}
                                            <span class="original-price">{{ produit.prixAsFloat|number_format(2, ',', ' ') }} €</span>
                                            <span class="final-price">{{ prixFinal|number_format(2, ',', ' ') }} €</span>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                                {% if not hasPromo %}
                                    <strong>{{ produit.prixAsFloat|number_format(2, ',', ' ') }} €</strong>
                                {% endif %}
                            </div>

                            <!-- Product Details -->
                            <div class="product-details">
                                {% if produit.type == 'vetement' %}
                                    <p class="mb-1"><strong>Taille:</strong> {{ produit.taille }}</p>
                                    <p class="mb-1"><strong>Couleur:</strong> {{ produit.couleur }}</p>
                                    <p class="mb-0"><strong>Genre:</strong> {{ produit.genre }}</p>
                                {% elseif produit.type == 'chaussure' %}
                                    <p class="mb-0"><strong>Pointure:</strong> {{ produit.pointure }}</p>
                                {% elseif produit.type == 'accessoire' %}
                                    <p class="mb-0"><strong>Type:</strong> {{ produit.accessoireType }}</p>
                                {% endif %}
                            </div>

                            <!-- Action Button -->
                            <a href="{{ path('app_produit_show', {id: produit.id}) }}" class="btn-discover">
                                Découvrir
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}{{ produit.nomProduit }} - Détails{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }
        .promo-badge {
            display: inline-block;
            padding: 5px 10px;
            background-color: #dc3545;
            color: white;
            border-radius: 5px;
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 400px;">
                <span class="text-white">Image produit</span>
            </div>
        </div>
        <div class="col-md-6">
            <h1>{{ produit.nomProduit }}</h1>
            
            <!-- Affichage des spécificités selon le type -->
            {% if produit.type == 'vetement' %}
                <ul class="list-unstyled">
                    <li><strong>Taille:</strong> {{ produit.taille }}</li>
                    <li><strong>Couleur:</strong> {{ produit.couleur }}</li>
                    <li><strong>Genre:</strong> {{ produit.genre }}</li>
                </ul>
            {% elseif produit.type == 'chaussure' %}
                <ul class="list-unstyled">
                    <li><strong>Pointure:</strong> {{ produit.pointure }}</li>
                </ul>
            {% elseif produit.type == 'accessoire' %}
                <ul class="list-unstyled">
                    <li><strong>Type:</strong> {{ produit.accessoireType }}</li>
                </ul>
            {% endif %}

            <hr>

            <!-- Prix -->
            <div class="mb-3">
                {% if promotions|length > 0 %}
                    <p class="mb-2">
                        <span class="text-decoration-line-through text-muted fs-5">{{ produit.prix|number_format(2, ',', ' ') }} €</span>
                        <span class="promo-badge ms-2">-{{ promotions[0].reduction }}%</span>
                    </p>
                    <h3 class="text-danger">{{ prixFinal|number_format(2, ',', ' ') }} €</h3>
                {% else %}
                    <h3>{{ produit.prix|number_format(2, ',', ' ') }} €</h3>
                {% endif %}
            </div>

            <!-- Bouton ajouter au panier -->
            {% if app.user %}
                <form action="{{ path('app_panier_ajouter', {id: produit.id}) }}" method="post" class="mb-3">
                    <div class="input-group mb-3" style="max-width: 300px;">
                        <input type="number" name="quantite" value="1" min="1" class="form-control rounded-0">
                        <button type="submit" class="btn btn-primary rounded-0 text-uppercase" style="letter-spacing: 1px;">
                            Ajouter au panier
                        </button>
                    </div>
                </form>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary rounded-0 text-uppercase" style="letter-spacing: 1px;">
                    Connectez-vous pour ajouter au panier
                </a>
            {% endif %}

            <hr>

            <!-- Description -->
            <div class="mt-4">
                <h4>Description</h4>
                <p>{{ produit.afficherDetails() }}</p>
            </div>
        </div>
    </div>

    <!-- Section Avis -->
    <div class="row mt-5">
        <div class="col-12">
            <h3>Avis clients</h3>
            <hr>
            
            {% if avis is empty %}
                <p class="text-muted">Aucun avis pour ce produit pour le moment.</p>
            {% else %}
                {% for avi in avis %}
                    <div class="card mb-3 rounded-0">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title mb-2">
                                        {{ avi.user.nom ?? 'Anonyme' }}
                                        <small class="text-muted">- {{ avi.date|date('d/m/Y') }}</small>
                                    </h5>
                                    <p class="card-text mb-0">{{ avi.contenu }}</p>
                                </div>
                                {% if app.user and avi.user == app.user %}
                                    <a href="{{ path('app_avis_supprimer', {id: avi.id}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet avis ?')">Supprimer</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

            <!-- Formulaire pour ajouter un avis -->
            {% if app.user %}
                <div class="mt-4">
                    <h4>Laisser un avis</h4>
                    <form action="{{ path('app_avis_creer', {id: produit.id}) }}" method="post">
                        <div class="mb-3">
                            <label for="contenu" class="form-label">Votre avis</label>
                            <textarea name="contenu" id="contenu" class="form-control rounded-0" rows="4" required placeholder="Partagez votre expérience avec ce produit..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary rounded-0 text-uppercase" style="letter-spacing: 1px;">Publier l'avis</button>
                    </form>
                </div>
            {% else %}
                <p class="text-muted">
                    <a href="{{ path('app_login') }}">Connectez-vous</a> pour laisser un avis.
                </p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}


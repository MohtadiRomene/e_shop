{% extends 'base.html.twig' %}

{% block title %}Accueil - E-commerce{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Bienvenue sur notre site E-commerce</h1>
            <p class="text-center lead">Découvrez notre sélection de produits</p>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Vêtements</h5>
                    <p class="card-text">Découvrez notre collection de vêtements</p>
                    <a href="{{ path('app_produits_vetements') }}" class="btn btn-primary">Voir les vêtements</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Chaussures</h5>
                    <p class="card-text">Parcourez notre gamme de chaussures</p>
                    <a href="{{ path('app_produits_chaussures') }}" class="btn btn-primary">Voir les chaussures</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Accessoires</h5>
                    <p class="card-text">Explorez nos accessoires</p>
                    <a href="{{ path('app_produits_accessoires') }}" class="btn btn-primary">Voir les accessoires</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="{{ path('app_produits') }}" class="btn btn-outline-primary btn-lg">Voir tout le catalogue</a>
        </div>
    </div>
</div>
{% endblock %}


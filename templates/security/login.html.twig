{% extends 'base.html.twig' %}

{% block title %}Connexion - Kaira{% endblock %}

{% block body %}
<section class="py-5" style="margin-top: 100px; min-height: calc(100vh - 200px); background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card rounded-0 border-0 shadow-sm" style="border-top: 3px solid #8C907E !important;">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h1 class="h2 mb-2" style="font-family: var(--heading-font, 'Marcellus', serif);">Connexion</h1>
                            <p class="text-muted">Connectez-vous à votre compte</p>
                        </div>

                        {% if error %}
                            <div class="alert alert-danger rounded-0 mb-4">
                                <strong>Erreur :</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {% if app.user %}
                            <div class="alert alert-info rounded-0 mb-4">
                                Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>, 
                                <a href="{{ path('app_logout') }}" class="text-decoration-none">Déconnexion</a>
                            </div>
                        {% endif %}

                        <form method="post" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label fw-semibold">Email</label>
                                <input 
                                    type="email" 
                                    value="{{ last_username }}" 
                                    name="email" 
                                    id="inputEmail" 
                                    class="form-control rounded-0" 
                                    autocomplete="email" 
                                    required 
                                    autofocus
                                    placeholder="votre.email@example.com"
                                >
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <label for="inputPassword" class="form-label fw-semibold mb-0">Mot de passe</label>
                                    <a href="{{ path('app_forgot_password') }}" class="text-decoration-none small" style="color: #8C907E;">
                                        Mot de passe oublié ?
                                    </a>
                                </div>
                                <input 
                                    type="password" 
                                    name="password" 
                                    id="inputPassword" 
                                    class="form-control rounded-0" 
                                    autocomplete="current-password" 
                                    required
                                    placeholder="Votre mot de passe"
                                >
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <button class="btn btn-primary w-100 rounded-0 text-uppercase py-3 mb-3" type="submit" style="letter-spacing: 1px; font-weight: 500;">
                                Se connecter
                            </button>
                        </form>

                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Pas encore de compte ? 
                                <a href="{{ path('app_register') }}" class="text-decoration-none fw-semibold" style="color: #8C907E;">Inscrivez-vous</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

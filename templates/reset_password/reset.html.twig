{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe - Kaira{% endblock %}

{% block body %}
<section class="py-5" style="margin-top: 100px; min-height: calc(100vh - 200px); background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card rounded-0 border-0 shadow-sm" style="border-top: 3px solid #8C907E !important;">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h1 class="h2 mb-2" style="font-family: var(--heading-font, 'Marcellus', serif);">Nouveau mot de passe</h1>
                            <p class="text-muted">Entrez votre nouveau mot de passe</p>
                        </div>

                        {% if success %}
                            <div class="alert alert-success rounded-0 mb-4">
                                <strong>Succès !</strong> Votre mot de passe a été réinitialisé avec succès.
                            </div>
                            <div class="text-center">
                                <a href="{{ path('app_login') }}" class="btn btn-primary rounded-0 text-uppercase px-5" style="letter-spacing: 1px;">
                                    Se connecter
                                </a>
                            </div>
                        {% else %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger rounded-0 mb-4">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            <form method="post" class="needs-validation" novalidate>
                                <div class="mb-3">
                                    <label for="password" class="form-label fw-semibold">Nouveau mot de passe</label>
                                    <input 
                                        type="password" 
                                        name="password" 
                                        id="password" 
                                        class="form-control rounded-0" 
                                        autocomplete="new-password" 
                                        required 
                                        autofocus
                                        minlength="6"
                                        placeholder="Minimum 6 caractères"
                                    >
                                    <small class="text-muted">Le mot de passe doit contenir au moins 6 caractères.</small>
                                </div>

                                <div class="mb-4">
                                    <label for="confirm_password" class="form-label fw-semibold">Confirmer le mot de passe</label>
                                    <input 
                                        type="password" 
                                        name="confirm_password" 
                                        id="confirm_password" 
                                        class="form-control rounded-0" 
                                        autocomplete="new-password" 
                                        required
                                        minlength="6"
                                        placeholder="Répétez le mot de passe"
                                    >
                                </div>

                                <button class="btn btn-primary w-100 rounded-0 text-uppercase py-3 mb-3" type="submit" style="letter-spacing: 1px; font-weight: 500;">
                                    Réinitialiser le mot de passe
                                </button>
                            </form>

                            <div class="text-center">
                                <p class="text-muted mb-0">
                                    <a href="{{ path('app_login') }}" class="text-decoration-none fw-semibold" style="color: #8C907E;">
                                        ← Retour à la connexion
                                    </a>
                                </p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirm_password');

    form.addEventListener('submit', function(e) {
        if (password.value !== confirmPassword.value) {
            e.preventDefault();
            alert('Les mots de passe ne correspondent pas.');
            return false;
        }
    });
});
</script>
{% endblock %}

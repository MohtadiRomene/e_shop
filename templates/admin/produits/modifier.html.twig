{% extends 'admin/base.html.twig' %}

{% block title %}Modifier Produit - Administration{% endblock %}

{% block admin_content %}
<h1 class="h2 mb-4">Modifier {{ produit.nomProduit }}</h1>

<div class="card rounded-0">
    <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
            {{ form_widget(form) }}
            <div class="mt-3">
                <button type="submit" class="btn btn-primary rounded-0">Enregistrer</button>
                <a href="{{ path('app_admin_produits') }}" class="btn btn-outline-secondary rounded-0">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}


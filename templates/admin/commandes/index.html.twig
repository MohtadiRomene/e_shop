{% extends 'admin/base.html.twig' %}

{% block title %}Commandes - Administration{% endblock %}

{% block admin_content %}
<h1 class="h2 mb-4">Commandes</h1>

{% if commandes|length > 0 %}
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                        <th>N° Commande</th>
                        <th>Client</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Total</th>
                        <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in commandes %}
                    <tr>
                        <td>
                            {% if commande.numeroCommande %}
                                <strong>{{ commande.numeroCommande }}</strong>
                            {% else %}
                                #{{ commande.id }}
                            {% endif %}
                        </td>
                        <td>{{ commande.user.nom }}<br><small class="text-muted">{{ commande.user.email }}</small></td>
                        <td>{{ commande.datecommande|date('d/m/Y H:i') }}</td>
                        <td>
                            {% set status = commande.status %}
                            {% if status == 'pending' %}
                                <span class="badge bg-warning text-dark">En attente</span>
                            {% elseif status == 'confirmed' %}
                                <span class="badge bg-primary">Confirmée</span>
                            {% elseif status == 'processing' %}
                                <span class="badge bg-info">En traitement</span>
                            {% elseif status == 'shipped' %}
                                <span class="badge bg-info text-dark">Expédiée</span>
                            {% elseif status == 'delivered' %}
                                <span class="badge bg-success">Livrée</span>
                            {% elseif status == 'cancelled' %}
                                <span class="badge bg-danger">Annulée</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ status }}</span>
                            {% endif %}
                        </td>
                        <td><strong>{{ commande.prixtotal|number_format(2, ',', ' ') }} €</strong></td>
                        <td>
                            <a href="{{ path('app_admin_commandes_show', {id: commande.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="alert alert-info">
        Aucune commande enregistrée.
    </div>
{% endif %}
{% endblock %}


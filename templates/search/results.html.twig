{% extends 'base.html.twig' %}

{% block title %}Recherche{% if query %} - {{ query }}{% endif %}{% endblock %}

{% block body %}
<section class="py-5" style="margin-top: 100px;">
    <div class="container">
        <h1 class="mb-4">Résultats de recherche</h1>

        {% if query %}
            <p class="text-muted mb-4">Résultats pour "<strong>{{ query }}</strong>"</p>
        {% endif %}

        {% if produits is empty %}
            <div class="alert alert-info">
                Aucun produit trouvé pour votre recherche.
            </div>
        {% else %}
            <div class="row g-4">
                {% for produit in produits %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card rounded-0 h-100">
                            {% if produit.image %}
                                <img src="{{ asset('images/products/' ~ produit.image) }}" class="card-img-top" alt="{{ produit.nomProduit }}" style="height: 300px; object-fit: cover;">
                            {% else %}
                                <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 300px;">
                                    <span class="text-white">Image non disponible</span>
                                </div>
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ produit.nomProduit }}</h5>
                                <p class="card-text">
                                    <strong>{{ produit.prix|number_format(2, ',', ' ') }} €</strong>
                                </p>
                                <a href="{{ path('app_produit_show', {id: produit.id}) }}" class="btn btn-primary rounded-0">Voir détails</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}


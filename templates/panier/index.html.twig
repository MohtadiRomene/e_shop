{% extends 'base.html.twig' %}

{% block title %}Mon Panier - Kaira{% endblock %}

{% block body %}
<section class="py-5" style="margin-top: 100px;">
    <div class="container">
        <h1 class="h2 mb-4">Mon Panier</h1>

        {% if errors|length > 0 %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Attention :</strong>
                <ul class="mb-0 mt-2">
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}

        {% if panier.panierProduits|length > 0 %}
            <div class="row">
                <div class="col-lg-8">
                    <div class="card rounded-0">
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Produit</th>
                                        <th>Prix unitaire</th>
                                        <th>Quantité</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for panierProduit in panier.panierProduits %}
                                        {% set prixUnitaire = panierProduit.prixUnitaireAsFloat %}
                                        {% set totalLigne = panierProduit.total %}
                                        <tr>
                                            <td>
                                                <strong>{{ panierProduit.produit.nomProduit }}</strong>
                                                {% if not panierProduit.produit.isEnStock %}
                                                    <span class="badge bg-danger ms-2">Rupture de stock</span>
                                                {% elseif panierProduit.quantite > panierProduit.produit.stock %}
                                                    <span class="badge bg-warning ms-2">Stock insuffisant</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ prixUnitaire|number_format(2, ',', ' ') }} €</td>
                                            <td>
                                                <form method="post" action="{{ path('app_panier_modifier', {id: panierProduit.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('modifier_' ~ panierProduit.id) }}">
                                                    <input type="number" name="quantite" value="{{ panierProduit.quantite }}" min="1" max="{{ panierProduit.produit.stock }}" class="form-control form-control-sm" style="width: 80px; display: inline-block;" onchange="this.form.submit()">
                                                </form>
                                            </td>
                                            <td><strong>{{ totalLigne|number_format(2, ',', ' ') }} €</strong></td>
                                            <td>
                                                <a href="{{ path('app_panier_supprimer', {id: panierProduit.id}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir retirer ce produit ?')">Retirer</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="{{ path('app_panier_vider') }}" class="btn btn-outline-secondary rounded-0" onclick="return confirm('Êtes-vous sûr de vouloir vider votre panier ?')">Vider le panier</a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card rounded-0">
                        <div class="card-body">
                            <h3 class="h5 mb-4">Résumé</h3>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Sous-total</span>
                                <strong>{{ total|number_format(2, ',', ' ') }} €</strong>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <strong>Total</strong>
                                <strong class="h5">{{ total|number_format(2, ',', ' ') }} €</strong>
                            </div>
                            {% if errors|length == 0 %}
                            <a href="{{ path('app_commande_creer') }}" class="btn btn-primary w-100 rounded-0 text-uppercase" style="letter-spacing: 1px;">Passer la commande</a>
                            {% else %}
                                <button class="btn btn-secondary w-100 rounded-0 text-uppercase" disabled style="letter-spacing: 1px;">Corriger les erreurs avant de commander</button>
                            {% endif %}
                            <a href="{{ path('app_produits') }}" class="btn btn-outline-dark w-100 rounded-0 mt-2 text-uppercase" style="letter-spacing: 1px;">Continuer les achats</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <svg width="64" height="64" fill="currentColor" class="text-muted mb-3">
                    <use href="#cart"></use>
                </svg>
                <h3 class="h4 mb-3">Votre panier est vide</h3>
                <p class="text-muted mb-4">Découvrez nos produits et commencez vos achats !</p>
                <a href="{{ path('app_produits') }}" class="btn btn-primary rounded-0 text-uppercase px-5" style="letter-spacing: 1px;">Voir les produits</a>
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}

